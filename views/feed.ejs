<!DOCTYPE html>
<html>
	<head>
		<title>Hexbubble</title>
		<% include head %>
	</head>
	<body>
		<% include header %>
		<div class='main'>
			<% include sidebar %>
			<div class='container feed'>
				<br>
				<div class='newPost shadow'>
					<form id='postForm'>
						<textarea id='post' placeholder='Say something!'></textarea>
						<input type="file" id='postPicture' name='postPicture'>
						<label for="postPicture"><div class='button'>Attach Image</div></label>
						<br/>
						<div class='postPicturePreview' id='postPicturePreview'></div>
						<div class='button' onclick="newPost()">Post!</div>
						<h6 id='postUploading'></h6>
					</form>
				</div>
				<br>
				<br>
					<div class="post button" id="topPostButton" onclick="showTopPosts()">
						<h2>Top Posts</h2>
						<h1>â®Ÿ</h1>
					</div>
					<div id='topPostsContainer'>
						<h3>Sort by:</h3>
						<div class="button" id="" onclick="sortTop('likes', true)">Likes (high to low)</div>
						<div class="button" id="" onclick="sortTop('likes', false)">Likes (low to high)</div>
						<div class="button" id="" onclick="sortTop('dateCreated', true)">Date (descending)</div>
						<div class="button" id="" onclick="sortTop('dateCreated', false)">Date (ascending)</div>
						<div id='topPosts'>
							<!-- TOP POSTS GO HERE -->
						</div>
					</div>
					<div id='posts'>
						<!-- POSTS GO HERE -->
					</div>
					<div class='button' onclick="runPreload()" id='loadmorebutton'>Load More</div>
					<br/>
					<br/>
					<br/>
			</div>
		</div>
		<script src="/jquery.js"></script>
		<script src='/moment.js'></script>
		<script src="/load-image.js"></script>
		<script src="/jq-progress.js"></script>
		<script src="/socket.io/socket.io.js"></script>
		<script>
			var me = JSON.parse('<%- me %>');
			var bubbleId = <%- bubbleId %>;
			var posts = JSON.parse('<%- (posts) %>');
			var topPosts = JSON.parse('<%- (topPosts) %>');
		</script>
		<script src='/js/showdown.js'></script>
		<script src='/js/feed.js'></script>
		<script src='/js/mergesort.js'></script>
	</body>
</html>